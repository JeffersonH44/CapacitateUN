<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="BancoPersistenceU" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>java:app/banco</jta-data-source>
    <class>DataAccess.Entity.Account</class>
    <class>DataAccess.Entity.Transaction</class>
    <class>DataAccess.Entity.Courses</class>
    <class>DataAccess.Entity.ExperienceRegister</class>
    <class>DataAccess.Entity.Topic</class>
    <class>DataAccess.Entity.User</class>
    <class>DataAccess.Entity.UserRegister</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
